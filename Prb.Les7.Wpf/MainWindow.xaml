        <Label x:Name="lblSum" Content="" Background="OldLace" HorizontalAlignment="Left" Height="25" Margin="162,258,0,0" VerticalAlignment="Top" Width="118"/>
        <TextBox x:Name="txtText" HorizontalAlignment="Left" Height="161" Margin="317,74,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="375" AcceptsReturn="True"/>
        <Button x:Name="btnAnalyse" Content="Analiseer" HorizontalAlignment="Left" Height="36" Margin="317,247,0,0" VerticalAlignment="Top" Width="86" Click="btnAnalyse_Click"/>
        <ListBox x:Name="lstAnalyse" HorizontalAlignment="Left" Height="165" Margin="439,247,0,0" VerticalAlignment="Top" Width="253"/>
