        <Label x:Name="lblAvgAmounts" Content="" Background="OldLace" HorizontalAlignment="Left" Height="25" Margin="302,495,0,0" VerticalAlignment="Top" Width="118"/>
        <Label x:Name="lblCountAmounts" Content="" Background="OldLace" HorizontalAlignment="Left" Height="25" Margin="302,525,0,0" VerticalAlignment="Top" Width="118"/>
