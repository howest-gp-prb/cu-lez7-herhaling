        <Label Content="Aantal bedragen : " HorizontalAlignment="Left" Height="25" Margin="161,525,0,0" VerticalAlignment="Top" Width="136"/>
        <Button x:Name="btnAddAmount" Content="Bedrag toevoegen" HorizontalAlignment="Left" Height="31" Margin="161,369,0,0" VerticalAlignment="Top" Width="140" Click="btnAddAmount_Click"/>
        <TextBox x:Name="txtAmount" HorizontalAlignment="Left" Height="34" Margin="161,330,0,0" Text="" HorizontalContentAlignment="Right" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <Button x:Name="btnRemoveAmount" Content="Bedrag verwijderen" HorizontalAlignment="Left" Height="31" Margin="162,404,0,0" VerticalAlignment="Top" Width="140" Click="btnRemoveAmount_Click"/>
        <DatePicker x:Name="dtpDayOfBirth" HorizontalAlignment="Left" Margin="738,23,0,0" VerticalAlignment="Top" SelectedDateChanged="dtpDayOfBirth_SelectedDateChanged"/>
        <TextBlock x:Name="tblInfo" HorizontalAlignment="Left" Height="160" Margin="738,75,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="272"/>

    </Grid>
</Window>
